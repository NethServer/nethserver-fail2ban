{
my $ejabberd = $ejabberd{status} || 'disabled';
return "\n#ejabberd is not used on this server" unless ($ejabberd eq 'enabled' && (-f '/var/log/ejabberd/ejabberd.log'));

my $EjabberdAuth_status = $fail2ban{EjabberdAuth_status} || 'true';
my $TCPPorts = $ejabberd{TCPPorts} || '5222,5223,5280';
my $maxretry = $fail2ban{Ejabberd_MaxRetry} || $fail2ban{MaxRetry} || '3';

$OUT .= qq (
[ejabberd-auth]
enabled = $EjabberdAuth_status
port    = $TCPPorts
logpath = /var/log/ejabberd/ejabberd.log
maxretry = $maxretry
);
}
