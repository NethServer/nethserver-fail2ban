{
my $nginx = $nginx{status} || 'disabled';
return "#nginx not used on this server" unless ($nginx eq 'enabled');
}

[nginx-http-auth]
enabled = {($fail2ban{NginxHttpAuth_status} || 'true')
port    = {$nginx{TCPPorts};}
logpath = %(nginx_error_log)s

[nginx-botsearch]
enabled  = {($fail2ban{NginxBotSearch_status} || 'true')}
port     = {$nginx{TCPPorts};}
logpath  = %(nginx_error_log)s
maxretry = {($fail2ban{NginxBotSearch_maxretry} || '2')}
